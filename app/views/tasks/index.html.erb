<h1><%= t('Listing tasks') %></h1>

<table>
  <thead>
    <tr>
      <th><%= t('Title') %></th>
      <th><%= t('Duration') %></th>
      <th><%= t('Startdate') %></th>
      <th><%= t('Enddate') %></th>
      <th><%= t('Member') %></th>
      <th><%= t('Done') %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.title %></td>
        <td><%= task.duration %></td>
        <td><%= task.startdate %></td>
        <td><%= task.enddate %></td>
        <td><%= task.member_id %></td>
        <td><%= task.done %></td>
        <td><%= link_to t('Show'), task %></td>
        <td><%= link_to t('Edit'), edit_task_path(task) %></td>
        <td><%= link_to t('Destroy'), task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

